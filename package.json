{
  "name": "plain-cards",
  "version": "1.0.0",
  "description": "A simple library for representing a deck of playing cards.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint -c .eslintrc.json src",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add .",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CianM/plain-cards.git"
  },
  "keywords": [
    "Cards",
    "Playing Cards"
  ],
  "author": "Cian Mackle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CianM/plain-cards/issues"
  },
  "homepage": "https://github.com/CianM/plain-cards#readme",
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "eslint": "7.18.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
